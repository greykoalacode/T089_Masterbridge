doctype html
html
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        title Course Dashboard
        link(rel="stylesheet" type="text/css" href="/css/courseDB.css")
        link(rel="stylesheet" type="text/css" href="/css/index.css")
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous")
    
    body.container.main
        h1.title Courses Dashboard
        div.courses
            each course of courses
                .card
                    img(src=course.courseImage alt=course.courseName).card-img-top
                    .card-body
                        p Course Name: #{course.courseName}
                        div.content
                            img(width="50" height="50" src="https://media.istockphoto.com/photos/portrait-of-smiling-handsome-man-in-blue-tshirt-standing-with-crossed-picture-id1045886560?k=6&m=1045886560&s=612x612&w=0&h=hXrxai1QKrfdqWdORI4TZ-M0ceCVakt4o6532vHaS3I=").teacher
                            p Teacher: #{course.teacher}
                        a(href=course.courseLink).btn.btn-primary Go to Course ->
